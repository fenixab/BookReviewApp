<h1>Edit Book</h1>

<%= simple_form_for @book, :html => { :multipart => true } do |f| %>

<%= f.collection_select :category_id, Category.all, :id , :name %>
<%= f.file_field :book_img %>
<%= f.input :title, label: "Book title" %>
<%= f.input :description %>
<%= f.input :author %>
<%= f.button :submit %>

<% end %>